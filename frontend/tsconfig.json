{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "public/dist",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "lib": ["dom", "es2015"],
  "esModuleInterop": true
}
